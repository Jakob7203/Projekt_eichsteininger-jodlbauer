<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_yab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_light"
    android:orientation="vertical"
    tools:context=".mediaplayers.YouTubeAudioPlayer">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/play_ya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_light"
                android:text="Play"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/pause_ya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_light"
                android:text="Pause"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/stop_ya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_light"
                android:text="Stop"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24dp" />
        </TableRow>

    </TableLayout>

</LinearLayout>